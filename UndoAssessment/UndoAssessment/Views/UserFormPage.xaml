<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndoAssessment.Views.UserFormPage"
             Shell.PresentationMode="ModalAnimated"
             Title="Save User"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:viewModels="clr-namespace:UndoAssessment.ViewModels;assembly=UndoAssessment"
             x:DataType="viewModels:UserFormViewModel"
             ios:Page.UseSafeArea="true">

    <ContentPage.Content>
        <StackLayout Spacing="5" Padding="20" VerticalOptions="CenterAndExpand">
            <Label Text="Name" FontSize="Medium" />
            <Entry Text="{Binding Name, Mode=TwoWay}" FontSize="Medium" />
            <Label Text="Age" FontSize="Medium"/>
            <Editor Text="{Binding Age, Mode=TwoWay}" FontSize="Medium" Keyboard="Numeric" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>

