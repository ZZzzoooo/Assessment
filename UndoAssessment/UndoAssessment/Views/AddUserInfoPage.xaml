<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndoAssessment.Views.AddUserInfoPage"
             Title="Add User Info">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid Margin="30" HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="User Name:" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                <Entry Text="{Binding UserName}" Grid.Row="0" Grid.Column="1"/>
                <Label Text="Age:" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                <Entry Text="{Binding Age}" Grid.Row="1" Grid.Column="1" Keyboard="Numeric"/>
                <Button Margin="0,10,0,0" Text="SUBMIT" Command="{Binding SubmitUserInfoCommand}" Grid.Row="2" Grid.Column="1" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>