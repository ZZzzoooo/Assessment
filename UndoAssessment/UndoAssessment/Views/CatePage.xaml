             x:Class="UndoAssessment.Views.CatePage"
             xmlns:vm="clr-namespace:UndoAssessment.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:CateViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Enter User" Command="{Binding PopupUserInfoCommand}" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <StackLayout Margin="20,20,20,20">

            <Label Text="{Binding User}" 
               IsVisible="{Binding UserVisible}"
               HorizontalTextAlignment="Center"
