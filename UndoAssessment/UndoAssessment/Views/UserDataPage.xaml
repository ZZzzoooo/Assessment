<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndoAssessment.Views.UserDataPage"
             xmlns:vm="clr-namespace:UndoAssessment.ViewModels"
             xmlns:cnv="clr-namespace:UndoAssessment.Converters"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:UserDataViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="5,10"  Spacing="5">
            <Label Text="Name:" FontAttributes="Bold"/>
            <Entry Text="{Binding Name}"/>

            <Label Text="Age:" FontAttributes="Bold"/>
            <Entry Text="{Binding Age}" Keyboard="Numeric" MaxLength="2"/>

            <Button Text="Save" Command="{Binding SaveCommand}" VerticalOptions="EndAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>